      const tvdbId = document.getElementById('matchTvdbId')?.value ? parseInt(document.getElementById('matchTvdbId').value, 10) : null;
      
      const isTv = currentMatchItemData?.feed_type === 'tv';
      
      // Build search parameters
      const searchParams = {};
      if (isTv) {
        if (tvdbId) {
          searchParams['tvdbId'] = tvdbId;
        } else if (showName) {
          searchParams['showName'] = showName;
        }
      } else {
        if (tmdbId) {
          searchParams['tmdbId'] = tmdbId;
        } else if (title) {
          searchParams['title'] = title;
          if (year) searchParams['year'] = year;
        }
      }
      
      // Show loading
      document.getElementById('matchSearchLoading').classList.remove('hidden');
      document.getElementById('matchResultsContainer').classList.add('hidden');
      document.getElementById('matchNoResults').classList.add('hidden');
      const searchBtn = document.getElementById('matchSearchBtn');
      const originalText = searchBtn.textContent;
      searchBtn.disabled = true;
      searchBtn.textContent = 'Searching...';
      
      try {
        const res = await fetch(`/data/rss/search/${currentMatchItemId}`, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(searchParams),
        });
        
        if (!res.ok) {
          throw new Error(`HTTP ${res.status}: ${res.statusText}`);
        }
        
        const data = await res.json();
        
        if (data.success) {
          currentSearchResults = data.candidates || [];
          selectedMatch = null;
          
          // Hide loading
          document.getElementById('matchSearchLoading').classList.add('hidden');
          
          if (currentSearchResults.length === 0) {
            document.getElementById('matchNoResults').classList.remove('hidden');
            document.getElementById('matchResultsContainer').classList.add('hidden');
          } else {
            document.getElementById('matchNoResults').classList.add('hidden');
            document.getElementById('matchResultsContainer').classList.remove('hidden');
            renderSearchResults(currentSearchResults, isTv);
          }
          
          document.getElementById('matchResultsSection').classList.remove('hidden');
        } else {
          throw new Error(data.error || 'Search failed');
        }
      } catch (error) {
        console.error('[SEARCH] Error:', error);
        showToast('Search error: ' + (error.message || 'Unknown error'), 'error');
        document.getElementById('matchSearchLoading').classList.add('hidden');
      } finally {
        searchBtn.disabled = false;
        searchBtn.textContent = originalText;
      }
    }

    function renderSearchResults(results, isTv) {
      const container = document.getElementById('matchResultsContainer');
      container.innerHTML = '';
      
      results.forEach((candidate, index) => {
        const card = document.createElement('div');
        card.className = `border border-gray-300 dark:border-gray-600 rounded-lg p-4 cursor-pointer hover:border-orange-500 transition-colors ${selectedMatch === candidate ? 'border-orange-500 bg-orange-50 dark:bg-orange-900/20' : 'bg-gray-50 dark:bg-gray-800'}`;
        card.onclick = () => selectMatch(candidate, card);
        
        const name = isTv ? candidate.name : candidate.title;
        const year = candidate.year;
        const poster = candidate.poster;
        const overview = candidate.overview;
        
        card.innerHTML = `
          <div class="flex gap-4">
            ${poster ? `
              <img src="${poster}" alt="${name}" class="w-24 h-36 object-cover rounded flex-shrink-0" onerror="this.style.display='none'">
            ` : `
              <div class="w-24 h-36 bg-gray-300 dark:bg-gray-700 rounded flex-shrink-0 flex items-center justify-center">
                <span class="text-gray-500 dark:text-gray-400 text-xs">No Poster</span>
              </div>
            `}
            <div class="flex-1 min-w-0">
              <div class="flex items-start justify-between mb-2">
                <h4 class="text-lg font-semibold text-gray-900 dark:text-white">${name || 'Unknown'}</h4>
                ${year ? `<span class="text-gray-500 dark:text-gray-400 ml-2">${year}</span>` : ''}
              </div>
              ${overview ? `
                <p class="text-sm text-gray-600 dark:text-gray-400 line-clamp-3 mb-2">${overview}</p>
              ` : ''}
              <div class="flex gap-2 text-xs text-gray-500 dark:text-gray-400">
                ${candidate.tmdbId ? `<span>TMDB: ${candidate.tmdbId}</span>` : ''}
                ${candidate.tvdbId ? `<span>TVDB: ${candidate.tvdbId}</span>` : ''}
                ${candidate.imdbId ? `<span>IMDB: ${candidate.imdbId}</span>` : ''}
              </div>
            </div>
          </div>
        `;
        
        container.appendChild(card);
      });
    }

    function selectMatch(candidate, cardElement) {
      selectedMatch = candidate;
      
      // Update visual selection
      document.querySelectorAll('#matchResultsContainer > div').forEach((el) => {
        el.classList.remove('border-orange-500', 'bg-orange-50', 'dark:bg-orange-900/20');
        el.classList.add('bg-gray-50', 'dark:bg-gray-800');
      });
      cardElement.classList.add('border-orange-500', 'bg-orange-50', 'dark:bg-orange-900/20');
      cardElement.classList.remove('bg-gray-50', 'dark:bg-gray-800');
      
      // Show apply button
      document.getElementById('matchApplyBtn').classList.remove('hidden');
    }

    async function applySelectedMatch() {
      if (!selectedMatch || !currentMatchItemId) {
        showToast('Please select a match first', 'error');
        return;
      }
      
      const isTv = currentMatchItemData?.feed_type === 'tv';
      
      // Build match parameters from selected match
      const matchParams = {};
      
      if (isTv) {
        if (selectedMatch.tvdbId) matchParams['tvdbId'] = selectedMatch.tvdbId;
        if (selectedMatch.tmdbId) matchParams['tmdbId'] = selectedMatch.tmdbId;
        if (selectedMatch.imdbId) matchParams['imdbId'] = selectedMatch.imdbId;
        if (selectedMatch.name) matchParams['showName'] = selectedMatch.name;
      } else {
        if (selectedMatch.tmdbId) matchParams['tmdbId'] = selectedMatch.tmdbId;
        if (selectedMatch.imdbId) matchParams['imdbId'] = selectedMatch.imdbId;
        if (selectedMatch.title) matchParams['title'] = selectedMatch.title;
        if (selectedMatch.year) matchParams['year'] = selectedMatch.year;
      }
      
      // Hide modal and show loading
      hideMatchModal();
      const button = document.getElementById(`matchBtn${currentMatchItemId}`);
      const originalText = button.textContent;
      button.disabled = true;
      button.textContent = 'Applying...';
      
      try {
        const res = await fetch(`/data/rss/match/${currentMatchItemId}`, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(matchParams),
        });
        
        if (!res.ok) {
          const errorText = await res.text();
          throw new Error(`HTTP ${res.status}: ${errorText || res.statusText}`);
        }
        
        const data = await res.json();
        
        if (data.success) {
          const results = [];
          if (data.tmdbId) results.push(`TMDB: ${data.tmdbId}`);
          if (data.imdbId) results.push(`IMDB: ${data.imdbId}`);
          if (data.tvdbId) results.push(`TVDB: ${data.tvdbId}`);
          showToast(`Match applied! ${results.join(', ') || 'No IDs found'}`, 'success');
          setTimeout(() => window.location.reload(), 1000);
        } else {
          throw new Error(data.error || 'Unknown error');
        }
      } catch (error) {
        console.error('[MATCH] Error:', error);
        showToast('Error: ' + (error.message || 'Unknown error'), 'error');
        button.disabled = false;
        button.textContent = originalText;
      }
    }

    async function submitMatch() {
      if (!currentMatchItemId) {
        showToast('No item selected', 'error');
        return;
      }
      
      const title = document.getElementById('matchTitle').value.trim();
      const year = document.getElementById('matchYear').value ? parseInt(document.getElementById('matchYear').value, 10) : null;
      const tmdbId = document.getElementById('matchTmdbId').value ? parseInt(document.getElementById('matchTmdbId').value, 10) : null;
      const imdbId = document.getElementById('matchImdbId').value.trim() || null;
      const showName = document.getElementById('matchShowName')?.value.trim() || null;
      const season = document.getElementById('matchSeason')?.value ? parseInt(document.getElementById('matchSeason').value, 10) : null;
      const tvdbId = document.getElementById('matchTvdbId')?.value ? parseInt(document.getElementById('matchTvdbId').value, 10) : null;
      
      const isTv = currentMatchItemData?.feed_type === 'tv';
      
      // Build match parameters
      const matchParams = {
        title: title || null,
        year: year,
        tmdbId: tmdbId,
        imdbId: imdbId,
      };
      
      if (isTv) {
        matchParams.showName = showName;
        matchParams.season = season;
        matchParams.tvdbId = tvdbId;
      }
      
      // Hide modal
      hideMatchModal();
      
      // Show loading
      const button = document.getElementById(`matchBtn${currentMatchItemId}`);
      const originalText = button.textContent;
      button.disabled = true;
      button.textContent = 'Matching...';
      
      try {
        console.log('[MATCH] Sending match request for item', currentMatchItemId, 'with params:', matchParams);
        const res = await fetch(`/data/rss/match/${currentMatchItemId}`, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(matchParams),
        });
        
        console.log('[MATCH] Response status:', res.status, res.statusText);
        
        if (!res.ok) {
          const errorText = await res.text();
          console.error('[MATCH] Response error:', errorText);
          throw new Error(`HTTP ${res.status}: ${errorText || res.statusText}`);
        }
        
        const data = await res.json();
        console.log('[MATCH] Response data:', data);
        
        if (data.success) {
          const results = [];
          if (data.tmdbId) results.push(`TMDB: ${data.tmdbId}`);
          if (data.imdbId) results.push(`IMDB: ${data.imdbId}`);
          if (data.tvdbId) results.push(`TVDB: ${data.tvdbId}`);
          showToast(`Match completed! ${results.join(', ') || 'No IDs found'}`, 'success');
          setTimeout(() => window.location.reload(), 1000);
        } else {
          console.error('[MATCH] Match failed:', data.error || 'Unknown error');
          showToast('Error: ' + (data.error || 'Unknown error'), 'error');
          button.disabled = false;
          button.textContent = originalText;
        }
      } catch (error) {
        console.error('[MATCH] Exception during match:', error);
        showToast('Error: ' + (error.message || 'Unknown error'), 'error');
        button.disabled = false;
        button.textContent = originalText;
      }
    }

    function showToast(message, type = 'info', duration = 5000) {
      const container = document.getElementById('toastContainer');
      const toast = document.createElement('div');
      
      const bgColors = {
        success: 'bg-green-500',
        error: 'bg-red-500',
        warning: 'bg-yellow-500',
        info: 'bg-blue-500',
      };
      
      const icons = {
        success: 'âœ“',
        error: 'âœ—',
        warning: 'âš ',
        info: 'â„¹',
      };
      
      toast.className = `${bgColors[type] || bgColors.info} text-white px-6 py-4 rounded-lg shadow-lg flex items-center space-x-3 min-w-[300px] max-w-md toast-enter`;
      toast.innerHTML = `
        <span class="text-xl font-bold">${icons[type] || icons.info}</span>
        <span class="flex-1">${message}</span>
        <button onclick="this.parentElement.remove()" class="text-white hover:text-gray-200 font-bold text-xl">&times;</button>
      `;
      
      container.appendChild(toast);
      
      setTimeout(() => {
        toast.classList.remove('toast-enter');
        toast.classList.add('toast-exit');
        setTimeout(() => toast.remove(), 300);
      }, duration);
    }

    function showConfirm(message, onConfirm, onCancel = null) {
      const overlay = document.createElement('div');
      overlay.className = 'fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50';
      overlay.innerHTML = `
        <div class="bg-white dark:bg-gray-800 rounded-lg p-6 max-w-md w-full mx-4 shadow-xl">
          <h3 class="text-lg font-semibold mb-4 text-gray-900 dark:text-white">Confirm</h3>
          <p class="text-gray-700 dark:text-gray-300 mb-6">${message}</p>
          <div class="flex justify-end space-x-3">
            <button class="cancel-btn bg-gray-500 hover:bg-gray-600 text-white px-4 py-2 rounded">
              Cancel
            </button>
            <button class="confirm-btn bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded">
              Confirm
            </button>
          </div>
        </div>
      `;
      
      document.body.appendChild(overlay);
      
      overlay.querySelector('.confirm-btn').addEventListener('click', () => {
        overlay.remove();
        if (onConfirm) onConfirm();
      });
      
      overlay.querySelector('.cancel-btn').addEventListener('click', () => {
        overlay.remove();
        if (onCancel) onCancel();
      });
      
      overlay.addEventListener('click', (e) => {
        if (e.target === overlay) {
          overlay.remove();
          if (onCancel) onCancel();
        }
      });
    }

    function startSync() {
      const button = document.getElementById('syncButton');
      const buttonText = document.getElementById('syncButtonText');
      const syncIcon = document.getElementById('syncIcon');
      const progressContainer = document.getElementById('progressContainer');
      
      // Disable button and show loading state
      button.disabled = true;
      button.classList.add('opacity-50', 'cursor-not-allowed');
      buttonText.textContent = 'Syncing...';
      syncIcon.classList.add('animate-spin');
      progressContainer.classList.remove('hidden');
      
      // Start sync
      fetch('/data/rss/sync', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
      })
      .then(response => response.json())
      .then(data => {
        if (data.success) {
          showToast('RSS sync started successfully', 'success', 3000);
          // Start polling for progress
          progressInterval = setInterval(pollProgress, 1000);
        } else {
          showToast('Failed to start sync: ' + (data.message || 'Unknown error'), 'error');
          resetButton();
        }
      })
      .catch(error => {
        console.error('Error starting sync:', error);
        showToast('Failed to start sync: ' + error.message, 'error');
        resetButton();
      });
    }

    function pollProgress() {
      fetch('/data/rss/sync/progress')
        .then(response => response.json())
        .then(data => {
          // Only show progress if it's an RSS sync (page-specific)
          if (data.success && data.progress && data.progress.type === 'rss') {
            const progress = data.progress;
            const progressBar = document.getElementById('progressBar');
            const progressPercent = document.getElementById('progressPercent');
            const progressStep = document.getElementById('progressStep');
            const progressStats = document.getElementById('progressStats');
            
            // Update progress bar
            const percent = progress.progress || 0;
            progressBar.style.width = percent + '%';
            progressPercent.textContent = percent + '%';
            progressStep.textContent = progress.currentStep || 'Processing...';
            
            // Update stats
            if (progress.total > 0) {
              progressStats.textContent = `Processed: ${progress.processed || 0} / ${progress.total} feeds`;
              if (progress.errors > 0) {
                progressStats.textContent += ` | Errors: ${progress.errors}`;
              }
            }
            
            // Check if completed
            if (!progress.isRunning) {
              clearInterval(progressInterval);
              progressInterval = null;
              
              if (progress.errors > 0) {
                progressStep.textContent = 'Completed with errors';
                progressStep.classList.add('text-red-600');
                showToast(`Sync completed with ${progress.errors} error(s)`, 'warning', 5000);
              } else {
                progressStep.textContent = 'Sync completed successfully!';
                progressStep.classList.add('text-green-600');
                showToast('RSS sync completed successfully!', 'success', 3000);
              }
              
              // Reload page after 2 seconds to show updated data
              setTimeout(() => {
                window.location.reload();
              }, 2000);
            }
            // If progress type changed (not rss), stop polling
            else if (progress.type !== 'rss') {
              clearInterval(progressInterval);
              progressInterval = null;
              resetButton();
            }
          } else if (data.success && data.progress && data.progress.type !== 'rss') {
            // Wrong sync type - stop polling
            clearInterval(progressInterval);
            progressInterval = null;
            resetButton();
          }
        })
        .catch(error => {
          console.error('Error polling progress:', error);
        });
    }

    function resetButton() {
      const button = document.getElementById('syncButton');
      const buttonText = document.getElementById('syncButtonText');
      const syncIcon = document.getElementById('syncIcon');
      const progressContainer = document.getElementById('progressContainer');
      
      button.disabled = false;
      button.classList.remove('opacity-50', 'cursor-not-allowed');
      buttonText.textContent = 'Refresh RSS Feeds';
      syncIcon.classList.remove('animate-spin');
      
      if (progressInterval) {
        clearInterval(progressInterval);
        progressInterval = null;
      }
    }

    // Check for existing RSS sync on page load (only once, don't auto-poll)
    window.addEventListener('load', async () => {
      try {
        const response = await fetch('/data/rss/sync/progress');
        const data = await response.json();
        
        // Only start polling if there's an active RSS sync (page-specific)
        if (data.success && data.progress && data.progress.isRunning && data.progress.type === 'rss') {
          // Show progress bar
          const progressContainer = document.getElementById('progressContainer');
          if (progressContainer) {
            progressContainer.classList.remove('hidden');
          }
          
          // Disable sync button
          const button = document.getElementById('syncButton');
          const buttonText = document.getElementById('syncButtonText');
          const syncIcon = document.getElementById('syncIcon');
          if (button) {
            button.disabled = true;
            button.classList.add('opacity-50', 'cursor-not-allowed');
            if (buttonText) buttonText.textContent = 'Syncing...';
            if (syncIcon) syncIcon.classList.add('animate-spin');
          }
          
          // Start polling for progress
          progressInterval = setInterval(pollProgress, 500);
          pollProgress();
        }
      } catch (error) {
        // Silently fail - no active sync
        console.log('No active RSS sync detected');
      }
    });

    // Cleanup on page unload
    window.addEventListener('beforeunload', () => {
      if (progressInterval) {
        clearInterval(progressInterval);
      }
    });
  </script>
