    async function massScanRadarr() {
      const total = <%= typeof total !== 'undefined' ? total : 0 %>;
      if (total === 0) {
        showToast('No movies to scan', 'warning');
        return;
      }

      showConfirm(`Scan all ${total} mismatched movies in Radarr?\n\nThis will process movies in batches of 10 with delays between batches.\n\nThis may take several minutes.`, async () => {
        try {
          // Get all Radarr IDs from the current page
          const radarrIds = [];
          document.querySelectorAll('tr[data-radarr-id]').forEach(row => {
            const id = parseInt(row.getAttribute('data-radarr-id'));
            if (!isNaN(id)) {
              radarrIds.push(id);
            }
          });

          // If we have pagination, we need to get all IDs
          // For now, we'll scan all visible movies
          if (radarrIds.length === 0) {
            showToast('No movies found to scan', 'warning');
            return;
          }

          showToast(`Scanning ${radarrIds.length} movie(s) in Radarr...`, 'info');
          
          const response = await fetch(`/data-hygiene/mass-scan-radarr`, {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ radarrIds }),
          });

          const data = await response.json();

          if (data.success) {
            showToast(`Scanned ${data.summary.successful} movie(s) successfully. ${data.summary.failed} failed. Refreshing page...`, 'success', 5000);
            setTimeout(() => window.location.reload(), 3000);
          } else {
            showToast('Error: ' + (data.error || 'Failed to mass scan movies'), 'error');
          }
        } catch (error) {
          showToast('Error: ' + error.message, 'error');
        }
      });
    }

