        if (data.success && data.history) {
          // Display history in a modal or alert
          const historyText = data.history.map((h, idx) => {
            const date = new Date(h.date).toLocaleString();
            return `${idx + 1}. ${h.eventType} - ${h.sourceTitle || 'N/A'}\n   Date: ${date}\n   Quality: ${h.quality?.quality?.name || 'N/A'}`;
          }).join('\n\n');

          alert(`History for "${title}":\n\n${historyText}\n\nTotal entries: ${data.history.length}`);
        } else {
          showToast('Error: ' + (data.error || 'Failed to load history'), 'error');
